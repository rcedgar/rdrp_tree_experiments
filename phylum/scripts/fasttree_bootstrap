#!/bin/bash

echo $* >> ../log/args.log

fasttree=`readlink -f ../bin/fasttree`

DIR=`readlink -f ..`

aln=$DIR/alns/$1
workdir=$DIR/workdirs/fasttree_bootstrap/$1
outdir=$DIR/trees_bootstrap/fasttree
outtree=$outdir/$1.newick

if [ ! -s $aln ] ; then
	echo $0: Not found aln=$aln >> /dev/stderr
	exit 1
fi

mkdir -p $workdir
mkdir -p $outdir

cd $workdir

rm -f *fasttree*

cat $aln > aln

$fasttree -seed 1 < aln > $outtree

ls -lh $outtree
