#!/bin/bash

fasttree=`readlink -f ../bin/fasttree`

DIR=`readlink -f ..`

aln=$DIR/alns/$1
workdir=$DIR/workdirs/fasttree_bestonly/$1
outdir=$DIR/trees_bestonly/fasttree
outtree=$outdir/$1.newick

if [ ! -s $aln ] ; then
	echo $0: Not found aln=$aln >> /dev/stderr
	exit 1
fi

mkdir -p $workdir
mkdir -p $outdir

cd $workdir

rm -f *fasttree*

cat $aln > aln

$fasttree -seed 1 -nosupport < aln > $outtree

ls -lh $outtree
